<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>Moda Kitap Yönetim</title>

    <!-- Favicon-->
    <link rel="icon" href="favicon.ico" type="~/Areas/Admin/AdminContent/images/x-icon">
    <link rel="SHORTCUT ICON" href="~/Areas/Admin/AdminContent/favicon.ico">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&subset=latin,cyrillic-ext" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">
    <!-- Bootstrap Core Css -->
    <link href="~/Areas/Admin/AdminContent/plugins/bootstrap/css/bootstrap.css" rel="stylesheet">
    <!-- Waves Effect Css -->
    <link href="~/Areas/Admin/AdminContent/plugins/node-waves/waves.css" rel="stylesheet" />
    <!-- Animation Css -->
    <link href="~/Areas/Admin/AdminContent/plugins/animate-css/animate.css" rel="stylesheet" />
    <!-- Morris Chart Css-->
    <link href="~/Areas/Admin/AdminContent/plugins/morrisjs/morris.css" rel="stylesheet" />
    <!-- Custom Css -->
    <link href="~/Areas/Admin/AdminContent/css/style.css" rel="stylesheet">
    <!-- AdminBSB Themes. You can choose a theme from css/themes instead of get all themes -->
    <link href="~/Areas/Admin/AdminContent/css/themes/all-themes.css" rel="stylesheet" />
    <script src="~/Areas/Admin/AdminContent/plugins/bootstrap-select/js/bootstrap-select.js"></script>
    <script src="~/Areas/Admin/AdminContent/plugins/bootstrap-select/js/bootstrap-select.min.js"></script>
    <link href="~/Areas/Admin/AdminContent/plugins/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" />
    <link href="~/Areas/Admin/AdminContent/plugins/bootstrap-select/css/bootstrap-select.min.css" rel="stylesheet" />
</head>

<body class="theme-orange">
    <!-- Page Loader -->
    <div class="page-loader-wrapper">
        <div class="loader">
            <div class="preloader">
                <div class="spinner-layer pl-red">
                    <div class="circle-clipper left">
                        <div class="circle"></div>
                    </div>
                    <div class="circle-clipper right">
                        <div class="circle"></div>
                    </div>
                </div>
            </div>
            <p>Sayfa Yükleniyor...</p>
        </div>
    </div>
    <!-- #END# Page Loader -->
    <!-- Overlay For Sidebars -->
    <div class="overlay"></div>
    <!-- #END# Overlay For Sidebars -->
    <!-- Search Bar -->
    <div class="search-bar">
        <div class="search-icon">
            <i class="material-icons">search</i>
        </div>
        <input type="text" placeholder="START TYPING...">
        <div class="close-search">
            <i class="material-icons">close</i>
        </div>
    </div>
    <!-- #END# Search Bar -->
    <!-- Top Bar -->
    @{
    var user = Session["LoginAdminUser"] as ModaKitap.Model.Core.Entity.User;
    }
    <nav class="navbar">
        <div class="container-fluid">
            <div class="navbar-header">
                <a href="javascript:void(0);" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false"></a>
                <a href="javascript:void(0);" class="bars"></a>
                <a class="navbar-brand" href="/">Moda Kitap Yönetim</a>
            </div>
            <div class="collapse navbar-collapse" id="navbar-collapse">
                <ul class="nav navbar-nav navbar-right">

                    <!-- Notifications -->
                    <!-- Tasks -->
                    <!-- #END# Tasks -->

                </ul>
            </div>
        </div>
    </nav>
    <!-- #Top Bar -->
    <section>
        <!-- Left Sidebar -->
        <aside id="leftsidebar" class="sidebar">
            <!-- User Info -->
            <div class="user-info">
           
                <div class="info-container">
                    <div class="name" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Sayın @user.Ad @user.Soyad <br />
                        Hoş Gelginiz
                    </div>

                    <div class="btn-group user-helper-dropdown">
                        <i class="material-icons" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">keyboard_arrow_down</i>
                        <ul class="dropdown-menu pull-right">

                            <li><a href="/LogOut"><i class="material-icons">input</i>Çıkış</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- #User Info -->
            <!-- Menu -->
            <div class="menu">
                <ul class="list">
                    <li class="header">İŞLEM MENÜSÜ</li>
                    <li>
                        <a href="/Admin/Default">
                            <i class="material-icons">home</i>
                            <span>Anasayfa</span>
                        </a>
                    </li>
                    <li>

                        <a href="javascript:void(0);" class="menu-toggle">
                            <i class="material-icons">shopping_cart</i>
                            <span>Şipariş Yönetimi</span>
                        </a>
                        <ul class="ml-menu">
                            <li>
                                <a href="/Admin/AdminSiparis">Şipariş Listesi</a>
                            </li>
                            <li>
                                <a href="/Admin/KargoBekleyen">Kargo Bekleyen Ürünler </a>
                            </li>
                            <li>
                                <a href="/Admin/OdemeBekleyen">Ödeme Bekleyen Ürünler </a>
                            </li>
                            <li>
                                <a href="/Admin/TamamlananSiparis">Tamamlanan Siparişler </a>
                            </li>

                        </ul>
                    </li>
                    <li>
                        <a href="/Admin/Users">
                            <i class="material-icons">account_box</i>
                            <span>Üyeler Yönetimi</span>
                        </a>
                    </li>

                    <li>
                        <a href="/Admin/AdminKitaplars">
                            <i class="material-icons">storefront</i>
                            <span>Ürün Yönetimi</span>
                        </a>
                    </li>


                    <li>
                        <a href="/Admin/Kategoris">
                            <i class="material-icons">apps</i>
                            <span>Kategori Yönetimi</span>
                        </a>
                    </li>
                    <li>
                        <a href="/Admin/YayınEvi">
                            <i class="material-icons">menu</i>
                            <span>Yayın Evi Yönetimi</span>
                        </a>
                    </li>
                </ul>
            </div>
            <!-- #Menu -->
            <!-- Footer -->
            <div class="legal">
                <div class="copyright">
                    &copy; 2019 - 2020 <a href="javascript:void(0);">Stk Admin</a>.
                </div>
                <div class="version">
                    <b>Version: </b> 1.0.0
                </div>
            </div>
            <!-- #Footer -->
        </aside>
        <!-- #END# Left Sidebar -->
        <!-- Right Sidebar -->
        <!-- #END# Right Sidebar -->
    </section>
    <section class="content">
        @RenderBody()
    </section>
</body>
</html>
