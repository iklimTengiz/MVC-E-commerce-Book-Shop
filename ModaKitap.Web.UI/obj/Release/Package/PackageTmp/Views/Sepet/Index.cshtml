@model IEnumerable<ModaKitap.Model.Core.Entity.Sepet>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/EshopLayout.cshtml";
}
<section id="cart_items">
    <div class="container">
        <div class="breadcrumbs">
            <ol class="breadcrumb">
                <li class="active">Anasayfa &emsp; > </li>
                <li> Sepet &emsp;  > </li>
                <li class="active"> Adres Seç</li>
                <li class="active"> > &emsp; Sipariş Detayı  </li>
            </ol>
        </div>
        <div class="table-responsive cart_info">
            <table class="table table-condensed">
                <thead>
                    <tr class="cart_menu">
                        <td class="image">Ürün</td>
                        <td class="description"></td>
                        <td class="price">Fiyat</td>
                        <td class="quantity">Adet</td>

                        <td></td>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {

                    <tbody>
                        <tr>
                            <td class="cart_product">
                                <img class="sepetimg" src="/Admin/KitapResimAdmin/@item.Kitaplar.ResimURL" alt="" />
                            </td>
                            <td class="cart_description">
                                <h4><a href="">@Html.DisplayFor(modelItem => item.Kitaplar.KitapAdı)</a></h4>
                                <p>@Html.DisplayFor(modelItem => item.Kitaplar.ID)</p>
                            </td>
                            <td class="cart_price">
                                <p> @Html.DisplayFor(modelItem => item.Kitaplar.Fiyat)</p>
                            </td>
                            <td class="cart_quantity">
                                <div class="cart_quantity_button">

                                    <input class="cart_quantity_input" type="text" name="quantity" value="@Html.DisplayFor(modelItem => item.Adet)" autocomplete="off" size="2">

                                </div>
                            </td>

                           

                            <td class="cart_delete">
                                @Html.ActionLink("Sil", "Sil", new { id = item.ID })
                            </td>

                        </tr>
                    </tbody>
                }
            </table>
        </div>

    </div>
    <div style="float:right;">
        <p>Toplam İndirim: @Model.Sum(model => model.Kitaplar.İndirim)</p>
        <p>Toplam Tutar: @Model.Sum(model => model.Kitaplar.Fiyat)</p>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <a href="/SatınAl" class="btn btn-primary " style=" margin-left:auto;margin-right:auto; width:50%; float:right">Adres Seç ve Bitir</a>
        </div>
    </div>
    <br />
    <div class="container" style="padding-left: 253px;">
        <div class="row">
            <div class="col-sm-9 padding-right">
                <div class="recommended_items">
                    <!--recommended_items-->
                    <h2 class="title text-center">Size Özel Ürünler</h2>

                    @Html.Action("begenilist", "PartialView")
                </div><!--/recommended_items-->
            </div>
        </div>
    </div>



</section> <!--/#cart_items-->

