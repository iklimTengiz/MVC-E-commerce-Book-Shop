@{
    ViewBag.Title = "Login";
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>Giriş Yap</title>

    <!-- Favicon-->
    <link rel="icon" href="favicon.ico" type="~/Areas/Admin/AdminContent/images//x-icon">
    <link rel="SHORTCUT ICON" href="~/Areas/Admin/AdminContent/favicon.ico">
    <!-- Google Fonts -->
    <link href="~/Areas/Admin/AdminContent/css/AdminLoginForm.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&subset=latin,cyrillic-ext" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">
    <!-- Bootstrap Core Css -->
    <link href="~/Areas/Admin/AdminContent/plugins/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <!-- Waves Effect Css -->
    <link href="~/Areas/Admin/AdminContent/plugins/node-waves/waves.css" rel="stylesheet" />
    <!-- Animation Css -->
    <link href="~/Areas/Admin/AdminContent/plugins/animate-css/animate.css" rel="stylesheet" />
    <!-- Morris Chart Css-->
    <link href="~/Areas/Admin/AdminContent/plugins/morrisjs/morris.css" rel="stylesheet" />
    <!-- Custom Css -->
    <link href="~/Areas/Admin/AdminContent/css/style.css" rel="stylesheet">
    <!-- AdminBSB Themes. You can choose a theme from css/themes instead of get all themes -->
    <link href="~/Areas/Admin/AdminContent/css/themes/all-themes.css" rel="stylesheet" />
</head>
<body class="theme-orange">
    <!-- Page Loader -->
    <div class="page-loader-wrapper">
        <div class="loader">
            <div class="preloader">
                <div class="spinner-layer pl-red">
                    <div class="circle-clipper left">
                        <div class="circle"></div>
                    </div>
                    <div class="circle-clipper right">
                        <div class="circle"></div>
                    </div>
                </div>
            </div>
            <p>Sayfa Yükleniyor...</p>
        </div>
    </div>
    <!-- #END# Page Loader -->
    <!-- Overlay For Sidebars -->
    <div class="overlay"></div>
    <!-- #END# Overlay For Sidebars -->
    <!-- Search Bar -->
    <div class="search-bar">
        <div class="search-icon">
            <i class="material-icons">search</i>
        </div>
        <input type="text" placeholder="START TYPING...">
        <div class="close-search">
            <i class="material-icons">close</i>
        </div>
    </div>
    <!-- #END# Search Bar -->
    <!-- Top Bar -->
    <nav class="navbar">
        <div class="container-fluid">
            <div class="navbar-header">
                <a href="javascript:void(0);" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false"></a>
                <a href="javascript:void(0);" class="bars"></a>
                <a class="navbar-brand" href="/">Moda Kitap Yönetim Paneli</a>
            </div>
            <div class="collapse navbar-collapse" id="navbar-collapse">
                <ul class="nav navbar-nav navbar-right">

                    <!-- Notifications -->
                    <!-- Tasks -->
                    <!-- #END# Tasks -->

                </ul>
            </div>
        </div>

    </nav>


    <div style="margin:30px; margin-top:75px;  ">
        <div class="col-md-4 col-sm-4 col-md-offset-4 col-sm-offset-4">
           
        </div>
    </div>
    <div class="row" style="text-align:left;  padding-left:100px; padding:50px;  ">

        <div class="col-md-4 col-sm-4 col-md-offset-4 col-sm-offset-4" aling="centre">
            <section class="page-title">

                @ViewBag.Uyari
            </section>
       
            <!--end page-title-->
            <section>
                <div class="golgeli-kutu">
                    <a href="/"><img src="~/Content/images/modakitaplogo.png" style="height: 88px;width: 322px;" /></a>
                   
                    <form method="post">
                        @Html.Label("Mail")
                        <br />
                        @Html.TextBox("Maik")
                        <br />
                        @Html.Label("Şifre")
                        <br />
                        @Html.Password("Sifre")
                     
                        <hr />
                        <button type="submit">Giriş Yap</button>
                    </form>
                </div>

            </section>
        </div>
        <!--col-md-4-->
    </div>


</body>
</html>
<!-- Jquery Core Js -->
<script src="~/Areas/Admin/AdminContent/plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap Core Js -->
<script src="~/Areas/Admin/AdminContent/plugins/bootstrap/js/bootstrap.js"></script>
<!-- Select Plugin Js -->
<script src="~/Areas/Admin/AdminContent/plugins/bootstrap-select/js/bootstrap-select.js"></script>
<!-- Slimscroll Plugin Js -->
<script src="~/Areas/Admin/AdminContent/plugins/jquery-slimscroll/jquery.slimscroll.js"></script>
