                            <div class="col-md-12">
                                @Html.CheckBoxFor(model => model.okudum, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.okudum, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />
                        <div class="form-group">
                            <div class=" col-md-12">
                                <input type="submit" value="Kayıt Ol" class="button button_save button_member_save" />

                            </div>
                        </div>
                    </div>
                }
            </center>
        </div>
    </div>
</div>