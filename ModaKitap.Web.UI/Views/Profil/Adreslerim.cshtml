@model IEnumerable<ModaKitap.Model.Core.Entity.UserAdres>

@{
    ViewBag.Title = "Adreslerim";
    Layout = "~/Views/Shared/EshopLayout.cshtml";
}

<h2>Adreslerim</h2>


<table class="table">
    <tr>
 
        <th>
            Başlık
        </th>
        <th>
            Şehir
        </th>
        <th>
            Adres
        </th>
        <th>
            Durum
        </th>
 
       </tr>

@foreach (var item in Model) {
    <tr>
     
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sehir)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Adres)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Aktif_Degil)
        </td>

    </tr>
}

</table>
